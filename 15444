case class Check[A](a: A) {
	def value = a;
}

case class C2(checks: Check[_]*);

object C {
  def m(x : C2) = x match {
	  case C2(Check(1), rest @ _*) => {
		  val b = for (y <- rest) yield y.value;
	  }
  }
}

