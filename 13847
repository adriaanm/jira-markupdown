	at scala.StringBuilder$$.scala$$StringBuilder$$$$copyOf(StringBuilder.scala:867)
	at scala.StringBuilder.expandCapacity(StringBuilder.scala:112)
	at scala.StringBuilder.append(StringBuilder.scala:246)
