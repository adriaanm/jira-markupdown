*** 111,116 ****
--- 111,117 ----

  # default to the boot classpath for speed.
  CPSELECT="-Xbootclasspath/a:"
+ CPCLEAR="-classpath \"\""

  while [ $# -gt 0 ]; do
    case "$1" in
