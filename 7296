*** 153,159 ****
  "${JAVACMD:=java}" \
    $JAVA_OPTS \
    "${java_args[@]}" \
!   ${CPSELECT}${TOOL_CLASSPATH} \
    -Dscala.usejavacp=true \
    -Dscala.home="$SCALA_HOME" \
    -Denv.emacs="$EMACS" \
--- 155,161 ----
  "${JAVACMD:=java}" \
