case class Foo(x: Int)

object Test {
  def bippo(result: Boolean): Boolean = result
  def bungus(m: Foo): Boolean         = bippo(m match { case Foo(2) => bungus(m) })

  def main(args: Array[String]): Unit = bungus(Foo(0))
}

// With -Xoldpatmat: correct behavior
