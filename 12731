== Code ==

{code}
abstract class M
{ self =>

    type T
    final type selfType = M {type T = self.T}
    type actualSelfType >: self.type <: selfType


    def f[U](x: Any) = {}

    // compiles successfully
    f[Int](self: actualSelfType)

    f[Int](self: selfType)
/*
: error: type mismatch;
