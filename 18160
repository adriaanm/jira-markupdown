object Bug {
  def main(args: Array[String]) {
    import scala.reflect.runtime.{universe => ru}
    val m = ru.runtimeMirror(getClass.getClassLoader)
    println(m.classSymbol(classOf[java.util.ArrayList[_]]).toType)
    println(m.classSymbol(classOf[java.util.ArrayList[_]]).toType)
  }
}
