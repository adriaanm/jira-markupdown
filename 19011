import scala.reflect.macros.whitebox._
import scala.language.experimental.macros

object Macros {
  def impl(c: Context) = {
    import c.universe._
    q"""
      class C(x: Int) {
        def this() = this(0)
      }
      ()
    """
  }

  def foo: Any = macro impl
}

object Test extends App {
  Macros.foo
}
